{% extends "base.html.twig" %}

{% set Admin = Auth %}

{% block title %}

  Mission n° {{ mission.id }}

{% endblock %}

{% block body %}
{{parent()}}

  <h1> {{ mission.title }}</h1>
  <div class ="container">
    <p>Description: {{mission.description}}</p>
    <p>Nom de code: {{mission.codeName}}</p>
    <p>Pays: {{mission.country}}</p>
    <p>Type: {{mission.type}}</p>
    <p>Status: {{mission.status}}</p>
    <p>Début de la mission: {{mission.startDate|date("d/m/Y")}}</p>
    <p>Fin de la mission: {{mission.endDate|date("d/m/Y")}}</p>
    <p>Spécialité requise: {{specialty.name}}</p>
    <p>Agent sur la mission: {{agent.firstname}} {{agent.lastname}} alias {{agent.idCode}}</p>
    {% if hideout is not empty %}
      <p>Planque: {{hideout.code}}</p>
    {% endif %}
    <p>Contact: {{contact.firstname}} {{contact.lastname}}</p>
    <p>Cible: {{target.firstname}} {{target.lastname}}</p>
  </div>
{% endblock %}